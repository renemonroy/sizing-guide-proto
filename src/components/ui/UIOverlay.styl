.ui-overlay-wrapper
	height: 100%
	width: 100%
.ui-overlay
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 10
	overflow: hidden
	margin: 0
	padding: 0
	background-color: rgba(0, 0, 0, .75)

	.ui-overlay-background
		position: absolute
		width: 100%
		height: 100%

	.ui-overlay-content
		position: relative
		height: 100%
		width: 100%
		display: flex
		align-items: center
