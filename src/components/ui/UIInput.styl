.ui-input
	position: relative
	width: 100%
	height: 8rem
	margin: 0
	padding: 2rem 0
	background-color: #fff

	.ui-input-textzone
		position: absolute
		width: 100%
		height: 4rem
		outline: none
		white-space: nowrap
		overflow: hidden
		cursor: text
		display: flex
		flex-direction: row
		justify-content: center

	.ui-input-character
		display: inline-block
		font-size: 4rem
		line-height: 4rem