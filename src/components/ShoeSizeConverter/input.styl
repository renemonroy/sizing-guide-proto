.ssc-input
	position: relative
	width: 100%
	height: 4rem
	margin: 0
	padding: 0

	.ssc-input-textzone
		position: absolute
		width: 100%
		height: 4rem
		outline: none
		white-space: nowrap
		overflow: hidden
		cursor: text
		display: flex
		flex-direction: row
		justify-content: center

	.ssc-input-character
		display: inline-block
		font-size: 4rem
		line-height: 4rem
